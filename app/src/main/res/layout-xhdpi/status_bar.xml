<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notificationbg_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/BlueGrey"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/status_bar_album_art"
        android:layout_width="@dimen/status_bar_album_art"
        android:layout_height="@dimen/status_bar_album_art"
        android:background="@color/transparent"
        android:contentDescription="TODO"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/diskk"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="3dp"
        android:paddingEnd="0dp">

        <TextView
            android:id="@+id/status_bar_track_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="Song name here"
            android:textColor="@android:color/white"
            android:textSize="@dimen/noty_title" />

        <TextView
            android:id="@+id/status_bar_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="Artist name here"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/noty_subtitle" />

        <TextView
            android:id="@+id/status_bar_metadata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="Metadata name here"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/noty_meta" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/status_bar_previous"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/mprev" />

        <ImageButton
            android:id="@+id/status_bar_playPause"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:contentDescription="@string/cd_play"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/mplayx" />

        <ImageButton
            android:id="@+id/status_bar_next"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:contentDescription="@string/cd_next"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/mnexts" />

        <ImageButton
            android:id="@+id/status_bar_stop"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:contentDescription="@string/cd_next"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/xclear" />


    </LinearLayout>

</LinearLayout>