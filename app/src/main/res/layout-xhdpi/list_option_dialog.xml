<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_option_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mp_nowplaying_bg"
    android:clickable="true"
    android:focusable="true"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/option_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/mark_all"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:buttonTint="@android:color/white"
            android:text=" All"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="@dimen/mark_all" />

        <TextView
            android:id="@+id/mark_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="1/158"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/mark_all" />


        <Button
            android:id="@+id/close_list_option"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableStart="@drawable/closen"
            android:text=" Close"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/mark_all" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/option_header"
        android:background="@android:color/white" />

    <LinearLayout
        android:id="@+id/option_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option_header"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/add_playlist_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/list_playlist_add"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@color/transparent"
                android:clickable="false"
                android:scaleType="fitXY"
                android:src="@drawable/add_option"
                android:tint="@color/teal_option" />

            <TextView
                android:id="@+id/label_add_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:clickable="false"
                android:text="Playlist"
                android:textAlignment="center"
                android:textColor="@color/cyan"
                android:textSize="@dimen/mark_all" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_queue_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/list_queue_add"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@color/transparent"
                android:clickable="false"
                android:scaleType="fitXY"
                android:src="@drawable/queue_option"
                android:tint="@color/teal_option" />

            <TextView
                android:id="@+id/label_add_queue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:clickable="false"
                android:text="Queue"
                android:textAlignment="center"
                android:textColor="@color/cyan"
                android:textSize="@dimen/mark_all" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_send_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/list_option_send"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@color/transparent"
                android:clickable="false"
                android:scaleType="fitXY"
                android:src="@drawable/send_option"
                android:tint="@color/teal_option" />

            <TextView
                android:id="@+id/label_option_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:clickable="false"
                android:text="Send"
                android:textAlignment="center"
                android:textColor="@color/cyan"
                android:textSize="@dimen/mark_all" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_delete_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/list_option_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@color/transparent"
                android:clickable="false"
                android:scaleType="fitXY"
                android:src="@drawable/deletex"
                android:tint="@color/teal_option" />

            <TextView
                android:id="@+id/label_delete_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:clickable="false"
                android:text="Delete"
                android:textAlignment="center"
                android:textColor="@color/cyan"
                android:textSize="@dimen/mark_all" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>