<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pref_video_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/pref_video_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/pref_video_icon"
        android:layout_toStartOf="@+id/pref_video_reset"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:id="@+id/pref_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="Select video folder"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/pref_video_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="2"
            android:text="Currently all folders are selected"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="14dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/pref_video_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/video_folder" />

    <Button
        android:id="@+id/pref_video_reset"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_buttons"
        android:text="Reset"
        android:textColor="@color/black" />
</RelativeLayout>